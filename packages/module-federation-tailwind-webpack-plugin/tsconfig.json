{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
